@startuml
left to right direction

actor Client as cl
actor Director as d

package _1CIntegration {
}

package PaymentSystem {
}

package CarWashing {
    usecase "Регистрация пользоватял" as uc_a01
        usecase "Подтверждение номера телефона" as uc_a01_include
        usecase "Ошибка подтверждения номера" as uc_a01_extend
    
    usecase "Выбор автомойки" as uc_s01
        usecase "Выбор города" as uc_s01_1_include
        usecase "Выбор адреса" as uc_s01_2_include
        usecase "Выбор по поиску" as uc_s01_3_include
        
    usecase "Оплата услуги" as uc_p01
        usecase "Выбор способа оплаты" as uc_p01_1_include
        usecase "Оплата" as uc_p01_2_include
        
        
        
    usecase "Предоставление статистики\n о работе мойщиков" as uc_d01
        usecase "Отображение графиков (mini bi)" as uc_d01_1_include
        usecase "Выгрузка CSV" as uc_d01_2_include
    
}

cl --> uc_a01
    uc_a01 --> uc_a01_include : include
    uc_a01 --> uc_a01_extend : extend

cl --> uc_so1
    uc_s01 --> uc_s01_1_include : include
    uc_s01 --> uc_s01_2_include : include
    uc_s01 --> uc_s01_3_include : include
    
cl --> uc_p01
    uc_p01 --> uc_p01_1_include : include
    uc_p01 --> uc_p01_2_include : include
        uc_p01_2_include --> _1CIntegration : external
        uc_p01_2_include --> PaymentSystem : external

d --> uc_d01
    uc_d01 --> uc_d01_1_include : include
    uc_d01 --> uc_d01_2_include : include
@enduml
